{
  "include": [
    "src"
  ],
  "types": [
    "@types/node",
  ],
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "example/**",
    "node_modules/**",
    "**/dist/**",
    "**/node_modules/**"
  ]
}
